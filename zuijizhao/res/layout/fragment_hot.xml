<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray" >

    <LinearLayout
        android:id="@+id/ll_topmenu"
        style="?topbar_bg"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/title_height"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/ll_btn_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/btn_click"
            android:clickable="true"
            android:gravity="center" >

            <ImageView
                style="?topbar_btn_backmenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:contentDescription="@string/description_leftBtn" />

            <ImageView
                android:id="@+id/message_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|left|center"
                android:layout_marginLeft="10.0dip"
                android:layout_marginTop="7.0dip"
                android:src="@drawable/messager_tips"
                android:visibility="gone" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <RadioGroup
                android:id="@+id/tabNavGroup"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@id/col"
                    style="?side_menu_col"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent" />

                <RadioButton
                    android:id="@+id/rb_drycargo"
                    style="?top_tab_menu"
                    android:checked="true"
                    android:text="@string/drycargo" />

                <ImageView
                    android:id="@id/col"
                    style="?side_menu_col"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent" />

                <RadioButton
                    android:id="@+id/rb_freshcargo"
                    style="?top_tab_menu"
                    android:text="@string/freshcargo" />

                <ImageView
                    android:id="@id/col"
                    style="?side_menu_col"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent" />
            </RadioGroup>

            <ImageView
                android:id="@+id/location_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|right|center"
                android:src="@drawable/messager_tips"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_btn_release"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/btn_click" >

            <ImageView
                style="?topbar_btn_release"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:contentDescription="@string/description_rightBtn" />
        </LinearLayout>
    </LinearLayout>

    <ListView
        android:id="@+id/hotlist"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/ll_topmenu"
        android:layout_weight="1.0"
        android:fadingEdge="none"
        android:footerDividersEnabled="true" >
    </ListView>

</RelativeLayout>