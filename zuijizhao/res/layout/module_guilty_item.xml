<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="?guilty_list_item"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/ll_item_header"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:background="@color/blue_s"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_btn_user_avatar"
            android:layout_width="@dimen/image_avatar_size"
            android:layout_height="@dimen/image_avatar_size"
            android:background="@drawable/sample" />

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="iGuilty"
            android:textSize="@dimen/text_size_l" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:background="@color/blue_s"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="今天我犯了一个错误，有没有强制自己按时休息！！！" />

        <TextView
            android:id="@+id/tv_btn_content_aduio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/sample_audio" />

        <ImageView
            android:id="@+id/iv_content_picture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/sample_img" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_item_footer"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_gravity="center_vertical"
        android:background="@color/blue_s"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/ll_btn_praise"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:background="@drawable/btn_click"
            android:clickable="true"
            android:gravity="center"
            android:padding="2dp" >

            <TextView
                android:id="@+id/tv_img_praise"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/btn_praise" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_praise_count"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical|left"
            android:minWidth="40dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="2"
            android:textColor="@color/black_1"
            android:textSize="@dimen/text_size_xl" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:clickable="false"
            android:layout_weight="1" />

        <LinearLayout
            android:id="@+id/ll_btn_share"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/btn_click"
            android:clickable="true"
            android:gravity="center"
            android:padding="3dp" >

            <TextView
                android:id="@+id/tv_img_share"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/ico_share" />
        </LinearLayout>

        <View
            android:layout_width="10dp"
            android:layout_height="match_parent" />

        <LinearLayout
            android:id="@+id/ll_btn_comment"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/btn_click"
            android:clickable="true"
            android:gravity="center"
            android:padding="3dp" >

            <TextView
                android:id="@+id/tv_img_comment"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/ico_comment" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>