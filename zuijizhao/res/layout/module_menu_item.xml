<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="?menulistitem"
    android:layout_width="match_parent"
    android:layout_height="30dp"
    android:clickable="true" >

    <ImageView
        android:id="@+id/iv_item_bg"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:minHeight="10.0dip" />

    <TextView
        android:id="@+id/tv_menu_text"
        style="?menulistitem_menuName"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent" />

    <ImageView
        android:id="@+id/iv_more_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10.0dip"
        android:contentDescription="@string/description_menu"
        android:src="@drawable/menu_more_details" />
</RelativeLayout>