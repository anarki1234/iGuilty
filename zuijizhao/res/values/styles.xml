<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Day_Gear" parent="android:Theme.Light.NoTitleBar">
        <item name="menu_bg">@style/day_menu_bg</item>
        <item name="menutopbar">@style/day_menuTopbar</item>
        <item name="topbar_bg">@style/day_topbar_bg</item>
        <item name="setting">@style/day_setting</item>
        <item name="menutopbar_usericon">@style/day_menuTopbar_usericon</item>
        <item name="menutopbar_username">@style/day_menuTopbar_username</item>
        <item name="side_menu_col">@style/day_side_menu_col</item>
        <item name="menulist">@style/day_menulist</item>
        <item name="menulistitem">@style/day_menulistitem</item>
        <item name="menulistitem_menuName">@style/MenuListItem_menuName</item>
        <item name="topbar_btn_backmenu">@style/day_topbar_btn_backmenu</item>
        <item name="topbar_btn_release">@style/day_topbar_btn_release</item>
        <item name="top_tab_menu">@style/day_top_tab_menu</item>
        <item name="guilty_list_item">@style/day_guilty_list_item</item>
    </style>

    <style name="Day" parent="android:Theme.Holo.Light.NoActionBar">
        <item name="menu_bg">@style/day_menu_bg</item>
        <item name="menutopbar">@style/day_menuTopbar</item>
        <item name="topbar_bg">@style/day_topbar_bg</item>
        <item name="setting">@style/day_setting</item>
        <item name="menutopbar_usericon">@style/day_menuTopbar_usericon</item>
        <item name="menutopbar_username">@style/day_menuTopbar_username</item>
        <item name="side_menu_col">@style/day_side_menu_col</item>
        <item name="menulist">@style/day_menulist</item>
        <item name="menulistitem">@style/day_menulistitem</item>
        <item name="menulistitem_menuName">@style/MenuListItem_menuName</item>
        <item name="topbar_btn_backmenu">@style/day_topbar_btn_backmenu</item>
        <item name="topbar_btn_release">@style/day_topbar_btn_release</item>
        <item name="top_tab_menu">@style/day_top_tab_menu</item>
        <item name="guilty_list_item">@style/day_guilty_list_item</item>
    </style>

    <style name="day_guilty_list_item">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:background">@color/gray</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="day_top_tab_menu">
        <item name="android:textSize">@dimen/text_size_xl</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:background">@drawable/click_nav_bg</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:button">@null</item>
        <item name="android:singleLine">true</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:layout_weight">1.0</item>
    </style>

    <style name="day_topbar_btn_release">
        <item name="android:background">@drawable/icon_post_enable</item>
    </style>

    <style name="day_topbar_btn_backmenu">
        <item name="android:background">@drawable/side_icon</item>
    </style>

    <style name="day_menu_bg">
        <item name="android:background">@drawable/menu_bg</item>
    </style>

    <style name="day_menuTopbar">
        <item name="android:background">@drawable/menu_title_bg</item>
    </style>

    <style name="day_topbar_bg">
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@color/bg_color</item>
    </style>

    <style name="day_setting">
        <item name="android:background">@drawable/side_user_bg</item>
        <item name="android:src">@drawable/side_setting_icon</item>
    </style>

    <style name="day_menuTopbar_usericon">
        <item name="android:background">@drawable/side_button_background</item>
        <item name="android:src">@drawable/side_user_avatar</item>
    </style>

    <style name="day_menuTopbar_username">
        <item name="android:textSize">18.0sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:shadowColor">#7f000000</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">1.5</item>
        <item name="android:marqueeRepeatLimit">1</item>
    </style>

    <style name="day_side_menu_col">
        <item name="android:src">@drawable/side_menu_col</item>
    </style>

    <style name="day_menulist">
        <item name="android:fadingEdge">none</item>
        <item name="android:scrollingCache">false</item>
        <item name="android:cacheColorHint">#00000000</item>
        <item name="android:divider">@drawable/menu_seperator</item>
    </style>

    <style name="day_menulistitem">
        <item name="android:background">@drawable/menu_item</item>
    </style>

    <style name="MenuListItem_menuName">
        <item name="android:textSize">17.0sp</item>
        <item name="android:textColor">#ffe5e1d5</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">10.0dip</item>
        <item name="android:duplicateParentState">true</item>
        <item name="android:shadowColor">#7f000000</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">1.5</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="FullscreenTheme" parent="android:Theme.NoTitleBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@null</item>
        <item name="buttonBarStyle">@style/ButtonBar</item>
        <item name="buttonBarButtonStyle">@style/ButtonBarButton</item>
    </style>

    <style name="ButtonBar">
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:background">@android:drawable/bottom_bar</item>
    </style>

    <style name="ButtonBarButton" />

</resources>